
<% include ../header %>
		<header class="row">
			<div class="col-md-12 logo-txt">
				<h1>Ntalk</h1>
				<h4>Bem-vindo!</h4>
			</div>
		</header>

		<div class="row">
			<div role="main" id="main">
				<div class="form-login">
					<form class="form-horizontal" action="/entrar" method="post">
						<div class="form-group">
							<label for="usuario[nome]" class="col-md-4 control-label">Nome</label>
							<div class="col-md-4">
								<input type="text" name="usuario[nome]" placeholder="Nome" class="form-control">
							</div>
						</div>
						<div class="form-group">
							<label for="usuario[email]" class="col-md-4 control-label">E-mail</label>
							<div class="col-md-4">
								<input type="text" name="usuario[email]" placeholder="E-mail" class="form-control">
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-4 col-md-offset-4">
								<button type="submit" class="btn btn-primary btn-block">Entrar</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
<% include ../footer %>