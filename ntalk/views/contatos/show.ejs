<% include ../header %>
<header class="row">
	<div class="col-md-12 edit-contatos-txt">
		<h2>Ntalk - Dados do contato</h2>
	</div>
</header>

<div class="form-show-contatos">
	<form class="form-horizontal" action="/contato/<%- id %>?_method=delete" method="post">
		<div class="form-group">
			<label for="nome" class="col-md-4 control-label"></label>

			<div class="col-md-4">
				<input type="text" name="contato[nome]" class="form-control" value="<%- contato.nome%>" disabled>
			</div>
		</div>

		<div class="form-group">
			<label for="email" class="col-md-4 control-label"></label>

			<div class="col-md-4">
				<input type="text" name="contato[email]" class="form-control" value="<%- contato.email%>" disabled>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-4 col-md-offset-4">
				<button type="submit" class="btn btn-primary">Excluir</button>
				<a href="/contato/<%- id %>/editar">Editar</a>
			</div>
		</div>
	</form>
</div>

<% include ../exit %>
<% include ../footer %>