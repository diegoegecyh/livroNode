<%include ../header %>
<header class="row">
	<div class="col-md-12 agenda-contatos-txt">
		<h2>Ntalk - Agenda de contatos</h2>
	</div>
</header>
<div class="row">
	<div role="lista-contatos" id="lista-contatos">
		<div class="form-contatos">
			<form class="form-horizontal" action="/contato" method="post">
				<div class="form-group">
					<label for="contato-nome" class="col-md-4 control-label">Nome do contato</label>
					<div class="col-md-4">
						<input type="text" name="contato[nome]" placeholder="Nome contato" class="form-control">
					</div>
				</div>
				<div class="form-group">
					<label for="contato-email" class="col-md-4 control-label">E-mail do contato</label>
					<div class="col-md-4">
						<input type="text" name="contato[email]" placeholder="E-mail contato" class="form-control">
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-4 col-md-offset-4">
						<button type="submit" class="btn btn-primary">Cadastrar</button>
					</div>
				</div>
			</form>
		</div>
		<table class="table table-hover">
  			<thead>
  				<tr>
  					<th>Nome</th>
  					<th>E-mail</th>
  					<th>Ação</th>
  				</tr>
  			</thead>
  			<tbody>
  				<% contatos.forEach(function(contato, index) { %> 
  				<tr>
  					<td><%- contato.nome %></td>
  					<td><%- contato.email %></td>
  					<td>
  						<a href="/contato/<%- index %>">Detalhes</a>
  						<a href="/chat">Conversar</a>
  					</td>
  				</tr>
  				<% }) %>
  			</tbody>
  		</table>
	</div>
</div>
<%include ../exit %>
<%include ../footer %>